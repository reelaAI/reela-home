{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.tsconfig.json",
  "compilerOptions": {
    // More strict options
    "noUncheckedIndexedAccess": true, // 使用索引访问时，类型包含 undefined
    "noImplicitReturns": true, // 函数必须有返回值
    "noUnusedLocals": true, // 未使用的局部变量会报错
    "noUnusedParameters": true, // 未使用的函数参数会报错
    "exactOptionalPropertyTypes": true, // 可选属性的类型必须精确匹配 undefined
    "strictNullChecks": true, // 严格的 null 检查

    "sourceMap": true,
    "declarationMap": true
  }
}
